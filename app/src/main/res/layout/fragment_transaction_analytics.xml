<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bgAppColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Analytics Heading and Date Dropdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" TRANSACTION ANALYTICS"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"/>

           <!-- <Spinner
                android:id="@+id/dateSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/dates_array"
                android:background="@drawable/spinner_background"/>-->

        </LinearLayout>

        <!-- Income and Outcome Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/income_outcome_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <!-- Income Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INCOME"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Income Dropdown Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_arrow_down"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/tvIncomeTransactionAnalytics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹8,475"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>


            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <!-- Outcome Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OUTCOME"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <!-- Outcome Dropdown Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_arrow_up"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/tvOutcomeTransactionAnalytics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹8,475"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>


            </LinearLayout>
        </LinearLayout>


        <!-- Download Button -->
        <ImageView
            android:id="@+id/btnDownload"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_download"
            android:background="@drawable/circle_shape"
            android:scaleType="centerInside"
            />

        <!-- Bar Chart Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <!-- Week 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="24dp"
                    android:layout_height="100dp"
                    android:background="@color/barColor1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 WEEK"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Week 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="24dp"
                    android:layout_height="120dp"
                    android:background="@color/barColor2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 WEEK"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Week 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="24dp"
                    android:layout_height="160dp"
                    android:background="@color/barColor3"/>

                <!-- Data Value Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹15,678"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 WEEK"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Week 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="24dp"
                    android:layout_height="120dp"
                    android:background="@color/barColor4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 WEEK"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Time Range Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="24dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_weight="1"
                android:text="DAILY"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_weight="1"
                android:text="WEEKLY"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="MONTHLY"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="YEARLY"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
