<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bgAppColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="#000000" />

        <!-- FAQ 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. How to add a new expense?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the home screen, tap the '+' button, enter the amount, category, and note, then press Save."
            android:textSize="16sp"
            android:textColor="@color/income_green"
            android:paddingBottom="12dp" />

        <!-- FAQ 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Can I edit or delete a transaction?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes. Long press on the transaction in the list to edit or delete it."
            android:textSize="16sp"
            android:textColor="@color/income_green"
            android:paddingBottom="12dp" />

        <!-- FAQ 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. How to see monthly or yearly reports?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the filter option on the dashboard to view reports by month or year."
            android:textSize="16sp"
            android:textColor="@color/income_green"
            android:paddingBottom="12dp" />

        <!-- FAQ 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Is my data saved permanently?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your data is stored locally on your device. Make sure to back it up if needed."
            android:textSize="16sp"
            android:textColor="@color/income_green"
            android:paddingBottom="12dp" />

        <!-- Add more questions as needed -->
    </LinearLayout>
</ScrollView>
