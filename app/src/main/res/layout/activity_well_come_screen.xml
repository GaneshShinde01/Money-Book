<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WellComeScreen">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llmain"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track, Save "
                android:background="@drawable/txt_bg_ws1"
                android:textSize="35sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anpersend"
                android:textSize="35sp"
                android:textStyle="bold"

                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thrive..."
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:background="@drawable/txt_bg_ws2"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Empower Your Finances with Ease"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:src="@drawable/image1"
        android:id="@+id/image1"
        android:layout_below="@+id/llmain"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image1"
        android:id="@+id/llfortxt2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="200dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:gravity="end"
            android:textStyle="bold"
            android:text="Master Your Money,"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:gravity="end"
            android:textStyle="bold"
            android:text=" Effortlessly."

            />

    </LinearLayout>

   <!-- <androidx.appcompat.widget.AppCompatButton
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:text="GET STARTED"
        android:id="@+id/getStartedBtn"
        android:layout_below="@+id/llfortxt2"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/btn_bg_wellcome_screen"
        android:textColor="@color/white"
        >

    </androidx.appcompat.widget.AppCompatButton>-->



    <!-- Custom Button Layout (contains the play button, text, and triangles) -->
    <FrameLayout
        android:id="@+id/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/llfortxt2"
        android:layout_gravity="center">

        <!-- Play Button (only for display) -->
        <ImageView
            android:id="@+id/play_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/circular_background"
            android:src="@drawable/play_icon" />

        <!-- Text "GET STARTED" -->
        <TextView
            android:id="@+id/get_started_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:text="GET STARTED"
            android:textColor="#E0E0E0"
            android:textSize="20sp"
            android:textStyle="italic" />

        <!-- Moving Right Triangles -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="220dp"
            >

            <ImageView
                android:id="@+id/triangle_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/triangle1"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/triangle_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/triangle2"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/triangle_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/triangle3"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </FrameLayout>



</RelativeLayout>