<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@color/bgAppColor"
    android:layout_marginBottom="8dp">

    <!-- Category Icon -->
    <ImageView
        android:id="@+id/categoryIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circular_background"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="Category Icon" />

    <!-- Transaction Details (Date, Time, Description) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Category Name -->
        <TextView
            android:id="@+id/categoryNameTitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groceries"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Date -->
        <TextView
            android:id="@+id/transactionDateTitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 20, 2025"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- Time -->
        <TextView
            android:id="@+id/transactionTimeTitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 AM"
            android:textSize="12sp"
            android:textColor="@color/black" />


    </LinearLayout>

    <!-- Transaction Amount -->
    <TextView
        android:id="@+id/transactionAmountTitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-â‚¹50.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF1200" />

</LinearLayout>
