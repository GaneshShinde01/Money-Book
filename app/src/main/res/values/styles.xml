<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <!-- Background of the popup menu -->
        <item name="android:popupBackground">@drawable/custom_popup_background</item>

        <!-- Text color -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Item selector (for item highlight or ripple effect) -->
        <item name="android:itemBackground">@drawable/custom_item_selector</item>

        <!-- Icon color (if you want to tint the icons) -->
        <item name="android:iconTint">#FF4081</item>

    </style>


    <!-- Style for weekday text -->
    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textColor">@color/weekdayTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for date text -->
    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">@color/dateTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for today's date to make it visible -->
    <style name="CalendarTodayTextAppearance">
        <item name="android:textColor">@color/todayTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>